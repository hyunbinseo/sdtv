{
	"name": "svelte-kitty-starter",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kitty build",
		"preview": "vite preview",
		"start": "node build/start",
		"start:pm2": "pm2 start pm2.config.cjs",
		"deploy": "svelte-kitty deploy",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate@prod": "drizzle-kit migrate --config=drizzle.production.ts"
	},
	"dependencies": {
		"@hyunbinseo/tools": "^0.3.5",
		"better-sqlite3": "^11.7.0",
		"drizzle-kit": "^0.30.1",
		"drizzle-orm": "^0.38.2",
		"ulid": "^2.3.0",
		"valibot": "1.0.0-beta.9"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.10",
		"@sveltejs/kit": "^2.12.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.2",
		"@tailwindcss/forms": "^0.5.9",
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"jose": "^5.9.6",
		"new-request": "^0.0.20",
		"pm2-ecosystem": "^5.4.3",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"svelte": "^5.14.1",
		"svelte-check": "^4.1.1",
		"svelte-form-enhanced": "^0.2.1",
		"svelte-html-modal": "^3.0.0",
		"svelte-kitty": "workspace:^",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vite": "^6.0.3"
	},
	"engines": {
		"node": ">=22.12.0"
	},
	"type": "module"
}
